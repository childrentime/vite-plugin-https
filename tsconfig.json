{
  "compilerOptions": {
      "moduleResolution": "node",
      "target": "ES2020",
      "module": "ES2020",
      "noImplicitAny": true,
      "sourceMap": false,
      "importHelpers": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "outDir": "dist",
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
  }
}
